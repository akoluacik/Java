<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	   		http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
	   		http://www.springframework.org/schema/context
	   		http://www.springframework.org/schema/context/spring-context-3.1.xsd">
		
		
		<bean id="database" class="intro.OracleCustomerDal">
			<!-- While you are gonna be creating OracleCustomerDal, you'll face connectionString parameter -->
			<!-- Its value will be connectionString, as denoted below -->
			<property name="connectionString" value="Data Source=MyOracleDB;User Id=myUsername;Password=myPassword;Integrated Security=no;"></property>
		</bean>
		
		<bean id="service" class="intro.CustomerManager">
			<property name="customerDal" ref="database"></property>
		</bean>
		
</beans>
